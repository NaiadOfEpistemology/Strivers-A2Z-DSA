public class Main {
    public static void main(String[] args) {
        int[] arr = {1, 1, 0, 1, 1, 0, 1, 1, 1, 1};
        int i, count = 0, max = 0;
        for(i = 0; i < arr.length; i++) {
            if(arr[i] == 1) {
                count++;
                if(count > max) {
                    max = count;
                }
            } 
            else {
                count = 0;
            }
        }
        System.out.print(max);
    }
}

OUTPUT : 
4
