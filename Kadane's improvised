import java.util.*;
public class Main
{
	public static void main(String[] args) {
		int[] arr={4,-4,-2,4,-3,4,-4,3,1,0};
		int m=Integer.MIN_VALUE;
		int c=0;
		int s=0;
		int as=0;
		int ae=0;
		for(int i=0;i<arr.length;i++){
		    c+=arr[i];
		    if(c>m){
		        m=c;
		        as=s;
		        ae=i;
		        
		    }
		    if(c<0){
		    c=0;
		    s=i+1;
		}
		}
		
		System.out.println(m);
		for(int i=as;i<=ae;i++){
		    System.out.print(arr[i]+" ");
		}
	}
}
